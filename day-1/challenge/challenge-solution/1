pipeline {
    agent any
    stages {
        stage('Welcome') {
            steps {
                script {
                    def repoUrl = '<GITHUB_URL>'
                    def branchName = 'main'
                    echo "Welcome! Starting build for repository: ${repoUrl} on branch: ${branchName}"
                }
            }
        }
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: '<GITHUB_URL>'
            }
        }
        stage('Archive Files') {
            steps {
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true'
            }
        }
    }
    post {
        always {
            echo "Challenge 1 pipeline finished. Check the 'Artifacts' on the build page!"
        }
    }
}
