{
  "name": "express-node-starter",
  "version": "1.0.0",
  "description": "Simple Express app with Jest and Mocha tests",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test:jest": "jest --runInBand",
    "test:mocha": "mocha test/mocha --exit",
    "test": "npm run test:jest && npm run test:mocha"
  },
  "keywords": ["express","node","jest","mocha","supertest"],
  "author": "",
  "license": "MIT",
  "dependencies": {
  "express": "^4.18.2"
  },
  "devDependencies": {
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3",
    "jest": "^29.6.1"
  }
}
