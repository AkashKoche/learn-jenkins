// Debug Pipeline Problem: Check the Syntax for Pipeline

pipeline {
    agent any
    stages {
        stage('Welcome') {
            steps {
                script {
                    def repoUrl = 'https://github.com/jenkins-docs/simple-java-maven-app.git'
                    def branchName = 'main'
                    echo "Welcome! Starting build for repository: ${repoUrl} on branch: ${branchName}"
                }
            }
        }
        stage('Checkout Code') {
            steps {
                git-branch: 'main', url: 'https://github.com/jenkins-docs/simple-java-maven-app.git'
            }
        }
        stage('Archive Files') {
            steps {
                archiveArtifacts artifacts: '**/*.txt, fingerprint: true'
            }
        }
    }
    post {
        always {
            echo "Challenge 1 pipeline finished. Check the 'Artifacts' on the build page!"
        }
    }
}
