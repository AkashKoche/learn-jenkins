pipeline {
    agent {
        docker {
            image 'maven:3.8.1-openjdk-11'
            args '-v $HOME/.m2:/root/.m2'
        }
    }
    
    environment {
        // Application-specific environment variables
        APP_NAME = 'java-webapp'
        VERSION = '1.0.0-${env.BUILD_NUMBER}'
        
        // SonarQube configuration
        SONAR_HOST_URL = 'http://sonarqube:9000'
        SONAR_AUTH_TOKEN = credentials('sonar-token')
        
        // Nexus repository
        NEXUS_URL = 'http://nexus:8081'
        NEXUS_CREDENTIALS = credentials('nexus-credentials')
    }
    
    options {
        timeout(time: 30, unit: 'MINUTES')
        buildDiscarder(logRotator(numToKeepStr: '10'))
        disableConcurrentBuilds()
        timestamps()
    }
    
    triggers {
        pollSCM('H/2 * * * *')  // Poll every 2 minutes
    }
    
    stages {
        stage('Code Checkout') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/main']],
                    extensions: [
                        [
                            $class: 'RelativeTargetDirectory',
                            relativeTargetDir: 'src'
                        ],
                        [
                            $class: 'CloneOption',
                            depth: 1,
                            noTags: false,
                            shallow: true
                        ]
                    ],
                    userRemoteConfigs: [[
                        url: 'https://github.com/company/java-webapp.git',
                        credentialsId: 'github-ssh-key'
                    ]]
                ])
                
                script {
                    // Get git information
                    COMMIT_HASH = sh(
                        script: 'git rev-parse --short HEAD',
                        returnStdout: true
                    ).trim()
                    
                    BRANCH_NAME = sh(
                        script: 'git rev-parse --abbrev-ref HEAD',
                        returnStdout: true
                    ).trim()
                    
                    echo "Building branch: ${BRANCH_NAME}"
                    echo "Commit: ${COMMIT_HASH}"
                }
            }
        }
        
        stage('Dependency Resolution') {
            steps {
                sh '''
                    echo "Resolving dependencies..."
                    mvn dependency:resolve
                    mvn dependency:tree
                '''
            }
        }
        
        stage('Code Compilation') {
            steps {
                sh 'mvn compile -DskipTests'
            }
            post {
                success {
                    echo 'Code compiled successfully!'
                }
                failure {
                    echo 'Compilation failed!'
                }
            }
        }
        
        stage('Unit Tests') {
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                    publishHTML([
                        allowMissing: false,
                        alwaysLinkToLastBuild: true,
                        keepAll: true,
                        reportDir: 'target/site/jacoco',
                        reportFiles: 'index.html',
                        reportName: 'Code Coverage Report'
                    ])
                }
            }
        }
        
        stage('Static Code Analysis') {
            when {
                expression { env.BRANCH_NAME == 'main' || env.BRANCH_NAME == 'develop' }
            }
            steps {
                withSonarQubeEnv('sonar-server') {
                    sh 'mvn sonar:sonar -Dsonar.projectVersion=${VERSION}'
                }
            }
        }
        
        stage('Package Application') {
            steps {
                sh 'mvn package -DskipTests'
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }
        
        stage('Build Docker Image') {
            when {
                expression { env.BRANCH_NAME == 'main' }
            }
            steps {
                script {
                    docker.build("${APP_NAME}:${VERSION}")
                }
            }
        }
        
        stage('Push to Registry') {
            when {
                expression { env.BRANCH_NAME == 'main' }
            }
            steps {
                script {
                    docker.withRegistry('https://registry.company.com', 'docker-registry-creds') {
                        docker.image("${APP_NAME}:${VERSION}").push()
                        docker.image("${APP_NAME}:${VERSION}").push('latest')
                    }
                }
            }
        }
    }
    
    post {
        always {
            node {
                script {
            // Clean workspace
                    cleanWs()
                }
            }
            // Update build description
            script {
	        currentBuild.description = "Branch: ${env.BRANCH_NAME} | Commit: ${COMMIT_HASH}"
            }
            // Build metrics
            script {
                def duration = currentBuild.duration
                def durationMinutes = duration / 1000 / 60
                echo "Build duration: ${durationMinutes} minutes"
            }
        }
        
        success {
            emailext (
                subject: "SUCCESS: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                body: """
                Build #${env.BUILD_NUMBER} completed successfully!
                
                Details:
                - Branch: ${env.BRANCH_NAME}
                - Commit: ${env.COMMIT_HASH}
                - Duration: ${currentBuild.durationString}
                - URL: ${env.BUILD_URL}
                """,
                to: 'koche.akash@gmail.com'
            )
        }
        
        failure {
            emailext (
                subject: "FAILED: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                body: """
                Build #${env.BUILD_NUMBER} failed!
                
                Details:
                - Branch: ${env.BRANCH_NAME}
                - Commit: ${env.COMMIT_HASH}
                - Duration: ${currentBuild.durationString}
                - URL: ${env.BUILD_URL}
                
                Please check the build logs for details.
                """,
                to: 'koche.akash@gmail.com'
            )
        }
        
        unstable {
            echo 'Build is unstable - tests failed or quality gates not met'
        }
    }
}
